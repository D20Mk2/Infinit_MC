{
//材料
  "materials": [
	{
      "item": {
        // forge 提供的宽松型 NBT 写法，只要输入物品符合其中的 NBT，即可合成
        "type": "forge:partial_nbt",
        // 默认配件物品 id
        "item": "tacz:attachment",
        // 附加的 NBT 数值
        // 这里我们填写了配件 id
        "nbt": {
          "AttachmentId": "emxarms:bayonet_emx_skyhunter"
        }
      },
      "count": 1
    },
    {
      "item": {
//特定的某种材料
        "item": "minecraft:copper_ingot"
      },
      "count": 20
    },
    {
      "item": {
//特定的某种材料
        "item": "minecraft:iron_ingot"
      },
      "count": 4
    },
    {
      "item": {
//特定的某种材料
        "item": "minecraft:glass"
      },
      "count": 20
    }
  ],
 //输出结果
  "result": {
 //类型
    "type": "gun",
//输出物品
    "id": "emxarms:emx_tknife",
	"attachments": {
       // 配件类型：配件 id
       "muzzle": "emxarms:bayonet_emx_skyhunter"
    }
  }
}